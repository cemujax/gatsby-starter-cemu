{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "plugins": ["prettier", "jsx-a11y"],
  "rules": {
    "strict": 0,
    "no-console": "warn",

    "no-unused-vars": [1],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": [
      "enabled",
      { "ignore": "ignore", "customValidators": "customValidator" }
    ],
    "prettier/prettier": "warn"
  }
}
